@model Competition
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="form-group">
    <div class="col-md-2 control-label">
        @Model.Name
            </div>
    </div>
<div class="form-group">
    <label asp-for="City" class="col-md-2 control-label"></label>
</div>
<div class="form-group">
    <label asp-for="Date" class="col-md-2 control-label"></label>
</div>
<div class="form-group">
    <label asp-for="Distance" class="col-md-2 control-label"></label>
</div>
<div class="form-group">
    <a asp-controller="Starts" asp-action="AddStart" asp-route-competitionId="@Model.Id">Add start</a>
</div>

<div class="form-group">
    <a asp-controller="Competition" asp-action="StartDetails" asp-route-Id="@Model.Id">View Starting person</a>
</div>